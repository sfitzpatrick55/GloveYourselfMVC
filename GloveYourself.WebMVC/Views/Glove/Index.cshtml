@model IEnumerable<GloveYourself.Models.Glove.GloveListItem>

@{
    ViewData["Title"] = "Gloves";
}

<h3 class="section-title">All Gloves Available</h3>

<hr />

<div class="form-group-button">
    <a class="btn btn-success" href="glove/create"><i class="oi oi-plus"></i>Create New</a>
</div>
<br />

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success" role="alert">
        @TempData["SaveResult"]
    </div>
}
<div class="card-container">
    @foreach (var glove in Model)
    {
        <div class="card-container">
                <div class="card" style="width: 16rem;">
                    <div class="card-body">

                        @*<img class="card-img-top" src="@glove.Image" alt="@glove.Title" />*@
                        <h3 class="card-title">@glove.Title</h3>
                        <h4 class="card-text-brand">@glove.Brand</h4>
                        <h6 class="card-text-description">@glove.Description</h6>
                        <h6 class="card-text-category">Category: @glove.Category</h6>

                        <h6 class="card-text-task">Perfect for: @glove.UserTask</h6>
                        <br />
                        <a asp-action="Details" asp-route-id=@glove.GloveId class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id=@glove.GloveId class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id=@glove.GloveId class="btn btn-danger">Delete</a>
                        <br />
                        <br />
                        <h6 class="card-text-created"><i>Created @glove.CreatedUtc.DateTime</i></h6>
                    </div>
                </div>
        </div>
    }
</div>
